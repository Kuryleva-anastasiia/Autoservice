@model Autoservice.Models.Services

@{
    ViewData["Title"] = "Edit";
}

<section class="login container">

    <h1 class="form-title">Редактирование книги</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="description" class="control-label"></label>
                    <textarea asp-for="description" class="form-control" cols="60" rows="60"></textarea>
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="price" class="control-label"></label>
                    <input asp-for="price" class="form-control" type="number" />
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="duration" class="control-label"></label>
                    <input asp-for="duration" class="form-control" type="number" />
                    <span asp-validation-for="duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="category_id" class="control-label"></label>
                    <select asp-for="category_id" class="form-control" value="@Model.category_id" asp-items="ViewBag.id_category"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
