@model Autoservice.Models.Clients

@{
    ViewData["Title"] = "Delete";
}
<section class="login container">

    <h1 class="form-title">Удаление аккаунта</h1>

    <h3 class="form-title">Вы уверены, что хотите удалить аккаунт?</h3>
    <div>
        <p><strong class="book__feature">@Html.DisplayNameFor(model => model.login):</strong><span>@Html.DisplayFor(model => model.login)</span></p>

        <p><strong class="book__feature">@Html.DisplayNameFor(m => m.name):</strong><span>@Html.DisplayFor(m => m.name)</span></p>

    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Удалить" class="btn btn-danger btn-primary" /> |
        <a class="form-link" asp-action="Index">Вернуться</a>
    </form>
</section>
