@model Autoservice.Models.Orders

@{
    ViewData["Title"] = "Edit";
}

<section class="login container">

    <h1 class="form-title">Редактирование заказа</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <div class="form-group">
                    <label asp-for="client_id" class="control-label"></label>
                    <select asp-for="client_id" class="form-control" asp-items="ViewBag.client_id"></select>
                    <span asp-validation-for="client_id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="employee_id" class="control-label"></label>
                    <select asp-for="employee_id" class="form-control" asp-items="ViewBag.employee_id"></select>
                    <span asp-validation-for="employee_id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="date" class="control-label"></label>
                    <input asp-for="date" class="form-control" type="date" value="@Model.date.Date.ToString("dd.MM.yyyy")" />@Model.date.Date.ToString("dd.MM.yyyy")
                    <span asp-validation-for="date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="completeInDays" class="control-label"></label>
                    <input asp-for="completeInDays" class="form-control" type="number" />
                    <span asp-validation-for="completeInDays" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="sum" class="control-label"></label>
                    <input asp-for="sum" class="form-control" type="number" />
                    <span asp-validation-for="sum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="status" class="control-label"></label>
                    <select asp-for="status" class="form-control" asp-items="ViewBag.status"></select>
                    <span asp-validation-for="status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="form-link" asp-action="Index">Вернуться</a>
    </div>

</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
