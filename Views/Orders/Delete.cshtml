@model Autoservice.Models.Orders

@{
    ViewData["Title"] = "Delete";
}

<section class="login container">

    <h1 class="form-title">Удаление заказа</h1>

    <h3 class="form-title">Вы уверены, что хотите удалить заказ?</h3>

    <div>

        <p><strong class="book__feature">@Html.DisplayNameFor(model => model.date):</strong><span>@Html.DisplayFor(model => model.date)</span></p>

        <p><strong class="book__feature">@Html.DisplayNameFor(m => m.sum):</strong><span>@Html.DisplayFor(m => m.sum)</span></p>

        <p><strong class="book__feature">@Html.DisplayNameFor(m => m.status):</strong><span>@Html.DisplayFor(m => m.status)</span></p>

        <p><strong class="book__feature">@Html.DisplayNameFor(m => m.Clients.name):</strong><span>@Html.DisplayFor(m => m.Clients.name)</span></p>

        <p><strong class="book__feature">@Html.DisplayNameFor(m => m.Employees.name):</strong><span>@Html.DisplayFor(m => m.Employees.name)</span></p>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Удалить" class="btn btn-danger btn-primary" /> |
        <a class="form-link" asp-action="Index">Вернуться</a>
    </form>
</section>